{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "when": [
          "gui",
          "ground",
          "fixed"
        ],
        "model": {
          "type": "minecraft:model",
          "model": "armagun:item/armapaw"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:condition",
      "property": "minecraft:using_item",
      "on_true": {
        "type": "minecraft:model",
        "model": "armagun:item/armapaw_in_hand_shielding"
      },
      "on_false": {
        "type": "minecraft:model",
        "model": "armagun:item/armapaw_in_hand"
      }
    }
  }
}
